generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id default(autoIncrement())
  address String unique
}

model Task {
  id    Int @id @default(autoincrement())
  title String
  options Option[] 
}


model Option {
  id    Int @id @default(autoincrement())
  image_url String
  option_id    Int
  task_id    Int
  task   Task @relation(fields: [task_id], references: [id])

}

model Worker {
  id    Int @id @default(autoincrement())
  address String @unique
}